# Configuración de SIOC
# Copia este archivo a .env y ajusta los valores
# En Windows: copy env.example .env
# En Linux/Mac: cp env.example .env

# Seguridad
SECRET_KEY=dev-secret-key-change-in-production-use-random-key-here

# Base de datos MySQL/MariaDB (Docker)
# Formato: mysql+pymysql://usuario:contraseña@host:puerto/nombre_db
DATABASE_URL=mysql+pymysql://sioc_user:sioc_password@localhost:3306/sioc_db

# Uploads
MAX_CONTENT_LENGTH=20971520
UPLOAD_FOLDER=instance/uploads

# Sesiones (poner True en producción con HTTPS)
SESSION_COOKIE_SECURE=False

# Usuario administrador por defecto
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_EMAIL=admin@sioc.local

